{
  "name": "os-athena",
  "version": "1.2.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "electron": "electron .",
    "dev:electron": "NODE_ENV=development electron .",
    "build:electron": "npm run build && electron-builder --linux",
    "build:linux": "npm run build && electron-builder --linux --x64"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@octokit/rest": "^20.0.2",
    "axios": "^1.6.2",
    "electron-store": "^8.1.0",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.562.0",
    "next": "^14.2.5",
    "openai": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/react-syntax-highlighter": "^15.5.11",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.2.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.osathena.app",
    "productName": "OS Athena",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      ".next/**/*",
      "app/**/*",
      "components/**/*",
      "contexts/**/*",
      "lib/**/*",
      "services/**/*",
      "types/**/*",
      "next.config.js",
      "package.json",
      "public/**/*",
      "node_modules/**/*"
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": "x64"
        }
      ],
      "category": "Development",
      "icon": "assets/icon.png"
    }
  }
}
